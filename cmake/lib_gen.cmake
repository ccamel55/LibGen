# setup environmental variables we will use later
set(lib_gen_module_path ${CMAKE_CURRENT_LIST_DIR})

set(lib_gen_project_path ${PROJECT_SOURCE_DIR})
set(lib_gen_project_name ${PROJECT_NAME})

include(${lib_gen_module_path}/macros/configure_output.cmake)

# make sure we are using clang or gcc
if (NOT CMAKE_CXX_COMPILER_ID STREQUAL "Clang" AND
        NOT CMAKE_CXX_COMPILER_ID STREQUAL "GNU" AND
        NOT CMAKE_CXX_COMPILER_ID STREQUAL "AppleClang")
    message(FATAL_ERROR "Current compiler ${CMAKE_CXX_COMPILER_ID} not supported, please use clang or gcc.")
endif()

message(STATUS "=======================================================================================================")
message(STATUS "Included LibGen into current project.")

# set the output directory for files that lib_gen generates
set(lib_gen_output_dir ${CMAKE_CURRENT_BINARY_DIR}/lib_gen_output)

message(STATUS "Temporary files generated by LibGen can be found in ${lib_gen_output_dir}")
